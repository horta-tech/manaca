<%= simple_form_for @lead do |lead| %>
  <button type="button" id="upload_nota_button" class="text-center" onclick="document.getElementById('lead_invoice').click();" >UPLOAD NOTA FISCAL
  </button>
  <div id="nota_errors"></div>
  <%= lead.input :invoice, input_html: {class: "hidden"}, label: false %>
  <%= lead.input :invoice_cache, as: :hidden %>
  <%= lead.input :email, label: false, placeholder: "e-mail" %>
  <%= lead.submit "Calcular!", class: 'manaca-btn hidden', id: 'lead_submit' %>
  <button class="manaca-btn" id="calculate_button">Calcular!</button>
<% end %>
